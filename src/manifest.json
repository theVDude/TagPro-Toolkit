{
  "manifest_version": 2,
  "name": "TagPro Toolkit",
  "version": "0.2.5",
  "description": "Adds useful features to the webgame TagPro.",
  "icons": { "32": "img/logo32.png" },
  "permissions": [ "storage","activeTab" ],
  "background": {
		"scripts": ["background.js"]
	},
  "content_scripts": [
    {
      "matches": ["http://*.koalabeast.com/*", "http://*.jukejuice.com/*"],
      "js": ["main.js"],
	  "css": ["toolbox.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "js/profile.js","js/boards.js","jquery.js","options.html","img/logo32.png","js/profile-stats.js","js/user-tags.js","js/draw-tags.js","js/profile-tags.js","img/spin_outline.png"
  ],
  "icons": { "16": "img/logo16.png",
           "48": "img/logo48.png",
          "128": "img/logo128.png" }
}